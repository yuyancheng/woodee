      <!-- 源码 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version>
        <executions>
          <execution>
            <id>attach-source</id>
            <!-- 要绑定到的生命周期的阶段 -->
            <phase>package</phase>
            <goals>
              <!-- 要绑定的插件的目标 -->
              <goal>jar-no-fork</goal>
