<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sf.kh.dao.mapper.DespatchGoodsMapper" >
  <resultMap id="despatchGoodsMap" type="com.sf.kh.model.DespatchGoods" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="batch_id" property="batchId" jdbcType="BIGINT" />
    <result column="goods_id" property="goodsId" jdbcType="BIGINT" />
    <result column="goods_num" property="goodsNum" jdbcType="INTEGER" />
    <result column="remark" property="remark" jdbcType="VARCHAR" />
    <result column="create_by" property="createBy" jdbcType="VARCHAR" />
    <result column="create_tm" property="createTm" jdbcType="VARCHAR" />
    <result column="update_tm" property="updateTm" jdbcType="VARCHAR" />
    <result column="version" property="version" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, batch_id, goods_id, goods_num, remark, create_by, create_tm, update_tm, version
  </sql>
  <select id="getByBatchId" resultMap="despatchGoodsMap" >
    select 
    <include refid="Base_Column_List" />
    from t_despatch_goods
    where batch_id = #{batchId}
  </select>
  
  <insert id="saveList" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
	    insert into t_despatch_goods
	    (   
	        batch_id,
	        goods_id,
	        goods_num,
	        remark,
	        create_by,
	        create_tm
	    )
	    values
	    <foreach collection="list" item="item" index= "index" separator =",">
	    (
	        #{item.batchId},
	        #{item.goodsId},
	        #{item.goodsNum},
	        #{item.remark},
	        #{item.createBy},
	        #{item.createTm}
	    )
	    </foreach>
	</insert>
  
</mapper>